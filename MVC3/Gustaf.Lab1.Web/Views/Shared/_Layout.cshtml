<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
</head>
<body>
<div id="innergradient">
    <div class="page">
    
        <header>
            <div id="title">
                <h1>My MVC Application</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
                

        </header>
        <div class="shadow">
            <nav>				
                <div class="menu">
                    <ul>
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Groups & People", "Index", "GroupsAndPeople")
                            <ul>
                                <li>@Html.ActionLink("New Person", "NewPerson", "GroupsAndPeople")</li>
                                <li>@Html.ActionLink("New Group", "NewGroup", "GroupsAndPeople")</li>
                                <li>@Html.ActionLink("Add Person To Group", "AddPersonToGroup", "GroupsAndPeople")</li>   
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Netduino", "Index", "Netduino")
                            <ul>
                                <li>@Html.ActionLink("TemperatureGraph", "TemperatureGraph", "Netduino")</li>
                                <li>@Html.ActionLink("Fade RGB", "FadeRGB", "Netduino")</li>
                            </ul>
                        </li>
                    </ul>
                </div>  
            </nav>
        <section id="main">
            @RenderBody()
        </section>
        </div>
        <!--footer>
        </footer-->
    </div>
    </div>
</body>
</html>
